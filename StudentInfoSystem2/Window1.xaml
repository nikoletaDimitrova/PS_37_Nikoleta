<Window x:Class="StudentInfoSystem2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid x:Name="Login">
        <GroupBox x:Name="login" Header="Login" Margin="198,60,198,60"/>
        <Grid>
            <Label x:Name="Username" Content="Потребителско име" HorizontalAlignment="Center" Margin="0,123,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="loginInfo" HorizontalAlignment="Center" Margin="0,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        </Grid>
        <Grid>
            <Label x:Name="pass" Content="Парола" HorizontalAlignment="Center" Margin="0,191,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="usernameInput" HorizontalAlignment="Left" Margin="344,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <Button x:Name="logButt" Content="Login" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.69,3.474" Click="logButt_Click"/>
    </Grid>
</Window>
